path1 = uigetfile('.tif');
I = imread(path1);

I = imshow(I, []);
hold on
[J1, rect] = imcrop(I);
[r c] = size(J1);
numrows = 480 - r;

imwrite(J1, sprintf('0012_0000.tif')); 

close all
I = [];

%% 

path2 = uigetfile('.tif');
I = imread(path2);
J2 = imcrop(I, rect);

imwrite(J2, sprintf('0012_0900.tif')); 

%% 


path3 = uigetfile('.tif');
I = imread(path3);
J3 = imcrop(I, rect);

imwrite(J3, sprintf('0012_1799.tif')); 
%% 

figure(1)
imshow(J1, []);
figure(2)
imshow(J2, []);